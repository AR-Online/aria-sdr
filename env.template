###############################################
# ARIA-SDR - Environment Variables Template
# Copy this file to .env and fill in your values
###############################################

# --- FastAPI Configuration ---
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# --- Authentication ---
FASTAPI_BEARER_TOKEN=your-secure-token-here
BEARER_TOKEN=your-legacy-token-here

# --- OpenAI Configuration ---
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
ASSISTANT_ID=asst_your-assistant-id-here
ASSISTANT_TIMEOUT_SECONDS=12
CHAT_MODEL=gpt-4o-mini

# --- Supabase Configuration ---
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# --- Cloudflare Configuration ---
# Get from Cloudflare dashboard > My Profile > API Tokens
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# --- Mindchat Integration ---
MINDCHAT_API_TOKEN=your-mindchat-token-here
MINDCHAT_API_BASE_URL=https://api.mindchat.com
MINDCHAT_API_DOCS=https://docs.mindchat.com

# --- RAG Configuration ---
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
RAG_ENABLE=true
RAG_ENDPOINT=http://127.0.0.1:8000/rag/query
RAG_DEFAULT_SOURCE=faq

# --- Business Rules ---
VOLUME_ALTO_LIMIAR=1200

# --- Agno Integration ---
AGNO_ROUTING_WEBHOOK=https://agno.ar-infra.com.br/webhook/assist/routing
AGNO_API_BASE_URL=https://agno.ar-infra.com.br/api/v1
