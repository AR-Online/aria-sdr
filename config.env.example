
# ARIA Endpoint Example Environment Config
OPENAI_API_KEY=your-openai-api-key-here
ASSISTANT_ID=your-assistant-id-here
AUTH_TOKEN=your-auth-token-here
ASSISTANT_TIMEOUT_SECONDS=12

# TTS Settings
TTS_PROVIDER=openai  # openai|azure|polly|gcloud|eleven
TTS_VOICE=alloy
TTS_FORMAT=mp3
PUBLIC_BASE_URL=https://api.sua-aria.com
AUDIO_STORAGE=local  # local|s3

# S3 Settings (if AUDIO_STORAGE=s3)
S3_BUCKET=aria-tts
S3_REGION=sa-east-1
S3_ACCESS_KEY=your-s3-access-key-here
S3_SECRET_KEY=your-s3-secret-key-here

# Azure TTS (if using azure)
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-azure-region-here

# ElevenLabs TTS (if using eleven)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
