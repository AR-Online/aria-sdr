###############################################
# ARIA Endpoint â€“ Example Environment Variables
# Copy to .env and fill in values as needed.
###############################################

# --- FastAPI / Auth ---
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# Token required by the FastAPI auth dependency
# Keep this in sync with any external caller/tests
FASTAPI_BEARER_TOKEN=realizati

# Some tools/tests may look for this name
BEARER_TOKEN=realizati


# --- OpenAI (optional for Assistants/RAG embeddings) ---
# Obtain from https://platform.openai.com/
OPENAI_API_KEY=
# If using Assistants API for replies
ASSISTANT_ID=
# Max wait for Assistant run
ASSISTANT_TIMEOUT_SECONDS=12


# --- Supabase (RAG backend) ---
# Project URL (no trailing slash)
SUPABASE_URL=
# Use a service role key or RPC-executable key
SUPABASE_SERVICE_ROLE_KEY=
# Embedding settings (match your DB schema)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536


# --- RAG client (optional) ---
RAG_ENABLE=true
RAG_ENDPOINT=http://127.0.0.1:8000/rag/query
RAG_DEFAULT_SOURCE=faq


# --- Business rules ---
# Threshold that classifies high volume (monthly messages)
VOLUME_ALTO_LIMIAR=1200
